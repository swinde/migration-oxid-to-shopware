<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               https://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Standardmäßige Autowiring- und Autoconfigure-Einstellungen -->
    <services>

        <!-- Dein ProductMigrator Service -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigrator" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- MediaUploader Service -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\MediaUploader" public="true"/>

        <!-- OxidConnector Service -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\OxidConnector" public="true"/>

        <!-- ShopwareConnector Service -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\ShopwareConnector" public="true"/>

        <!-- Konsolenbefehl für Migration -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Command\MigrateOxidCommand">
            <tag name="console.command"/>
            <argument type="service" id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigrator"/>
        </service>

        <!-- Optional: MigrationCommand (falls du mehrere Commands hast)-->
        <service id="MigrationSwinde\MigrationOxidToShopware\Command\MigrationCommand" public="true">
             <tag name="console.command"/>
        </service>

    </services>
</container>

