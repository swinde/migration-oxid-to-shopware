<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- SystemConfigService wird vom Core bereitgestellt; kein eigener Eintrag nötig -->

        <!-- Factories (lesen Werte aus config.xml via SystemConfig) -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigratorFactory" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="MigrationSwinde\MigrationOxidToShopware\Service\CategoryMigratorFactory" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- Migratoren werden über die Factories erstellt -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigrator" public="true">
            <factory service="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigratorFactory" method="create"/>
        </service>

        <service id="MigrationSwinde\MigrationOxidToShopware\Service\CategoryMigrator" public="true">
            <factory service="MigrationSwinde\MigrationOxidToShopware\Service\CategoryMigratorFactory" method="create"/>
        </service>

        <!-- Haupt-Command: erwartet (CategoryMigrator, ProductMigrator) in dieser Reihenfolge -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Command\MigrateOxidCommand">
            <tag name="console.command"/>
            <argument type="service" id="MigrationSwinde\MigrationOxidToShopware\Service\CategoryMigrator"/>
            <argument type="service" id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigrator"/>
        </service>

        <!-- Check-Command: nimmt eine Factory (nutze Product oder Category, egal) -->
        <service id="MigrationSwinde\MigrationOxidToShopware\Command\CheckMigrationConfigCommand">
            <tag name="console.command"/>
            <argument type="service" id="MigrationSwinde\MigrationOxidToShopware\Service\ProductMigratorFactory"/>
        </service>
    </services>
</container>
